{
  "name": "galaxy-client",
  "version": "0.1.0",
  "description": "Galaxy client application build system",
  "keywords": [
    "galaxy"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/galaxyproject/galaxy.git"
  },
  "license": "AFL-3.0",
  "dependencies": {
    "amdi18n-loader": "^0.6.1",
    "backbone": "1.3",
    "bib2json": "^0.0.1",
    "d3": "3",
    "jquery": "2",
    "jquery-migrate": "~1.4",
    "jquery-mousewheel": "^3.1.13",
    "jquery.complexify": "^0.5.2",
    "jquery.cookie": "^1.4.1",
    "raven-js": "^3.17.0",
    "requirejs": "2",
    "underscore": "^1.8.3"
  },
  "scripts": {
    "watch": "gulp stage-libs && concurrently \"yarn run webpack-watch\" \"yarn run gulp watch\" \"yarn run style-watch\"",
    "build": "gulp stage-libs && concurrently \"yarn run style\" \"yarn run webpack\" \"yarn run gulp clean && yarn run gulp\"",
    "webpack": "webpack -p",
    "webpack-watch": "webpack -p --watch",
    "webpack-dev": "webpack -d",
    "webpack-dev-watch": "webpack -d --watch",
    "style": "grunt style",
    "style-watch": "grunt watch-style",
    "gulp": "gulp",
    "build-toolshed": "grunt --app=toolshed",
    "jshint": "jshint --exclude='galaxy/scripts/libs/**' galaxy/scripts/**/*.js",
    "build-charts": "webpack -p --config ../config/plugins/visualizations/charts/webpack.config.js",
    "prettier": "prettier --write --tab-width 4 --print-width 120 \"galaxy/scripts/{,!(libs)/**/}/*.js\""
  },
  "devDependencies": {
    "babel-core": "^6.24.0",
    "babel-loader": "^7.1.1",
    "babel-preset-env": "^1.3.2",
    "concurrently": "^3.4.0",
    "del": "^3.0.0",
    "expose-loader": "^0.7.3",
    "grunt": "^0.4.5",
    "grunt-bower-install-simple": "^1.1.0",
    "grunt-cli": "^0.1.13",
    "grunt-contrib-clean": "^0.6.0",
    "grunt-contrib-copy": "^0.5.0",
    "grunt-contrib-less": "^1.1.0",
    "grunt-contrib-uglify": "^0.8.0",
    "grunt-contrib-watch": "^0.6.1",
    "grunt-exec": "^0.4.6",
    "grunt-spritesmith": "^4.7.1",
    "gulp": "^3.9.1",
    "gulp-babel": "^7.0.0",
    "gulp-beautify": "^2.0.1",
    "gulp-cached": "^1.1.1",
    "gulp-if": "^2.0.2",
    "gulp-plumber": "^1.1.0",
    "gulp-sourcemaps": "^2.5.1",
    "gulp-uglify": "^3.0.0",
    "gulp-watch": "^4.3.11",
    "jshint": "^2.9.4",
    "prettier": "^1.7.4",
    "webpack": "^3.6.0"
  }
}
